

@model Bangaubong.Models.Mcategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="clearfix">
    <div class="container-fluid ">
        <div class="card">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-7">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb m-0 p-0" style="background-color:#f7f7f7">
                                    <li class="breadcrumb-item"><a href="~/admin">Bảng điều khiển</a></li>
                                    <li class="breadcrumb-item"><a href="~/admin/category">Loại sản phẩm</a></li>
                                    <li class="breadcrumb-item active" aria-current="page"><a href="">Thêm loại sản phẩm</a></li>
                                </ol>
                            </nav>
                        </div>
                        <div class="col-md-5 text-right">
                            <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-save"></i> Lưu lại</button>
                            <a class="btn btn-danger btn-sm" href="~/admin/category"><i class="fas fa-reply"></i> Thoát</a>
                        </div>
                    </div>
                </div>



                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <div class="col-md">
                                    <label>Tên loại sản phẩm</label>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md">
                                    <label>Mô tả SEO</label>
                                    
                                    @Html.EditorFor(model => model.Metadesc, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Metadesc, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md">
                                    <label>Từ khóa SEO</label>
                                 
                                @Html.EditorFor(model => model.Metakey, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Metakey, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="col-md">
                                    <label>Cấp cha</label>
                                    @Html.DropDownList("Listcat", null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md">
                                    <label>Trạng thái</label>
                                    <div class="form-control">
                                        @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Text = "Công khai", Value = "1" }, new SelectListItem { Text = "Riêng tư", Value = "2" } })
                                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            }

        </div>
    </div>
</section>

